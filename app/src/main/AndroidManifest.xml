<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tripndream.mangareviews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MangaReviews"
        android:usesCleartextTraffic="true">
        <activity android:name="com.tripndream.mangareviews.AgregarReviewActivity"></activity>
        <activity android:name="com.tripndream.mangareviews.EditReviewActivity" />
        <activity android:name="com.tripndream.mangareviews.MisReviewsActivity" />
        <activity android:name="com.tripndream.mangareviews.ReviewActivity" />
        <activity android:name="com.tripndream.mangareviews.InicioActivity" />
        <activity android:name="com.tripndream.mangareviews.MainActivity" />
        <activity android:name="com.tripndream.mangareviews.RegistroActivity" />
        <activity android:name="com.tripndream.mangareviews.RecoveryActivity" />
        <activity
            android:name="com.tripndream.mangareviews.SplashScreen"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>