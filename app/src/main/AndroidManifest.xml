<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comeback">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Comeback"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.comeback.AvistamientosActivity"
            android:exported="false" />
        <activity
            android:name="com.example.comeback.DetalleActivity"
            android:exported="false" />
        <activity
            android:name="com.example.comeback.ReportesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.comeback.NuevoHogarActivity"
            android:exported="false" />
        <activity
            android:name="com.example.comeback.EnSuHogarActivity"
            android:exported="false" />
        <activity
            android:name="com.example.comeback.PerdidosActivity"
            android:exported="false"
            android:label="@string/title_activity_perdidos"
            android:theme="@style/Theme.Comeback.NoActionBar" />
        <activity
            android:name="com.example.comeback.Formulario"
            android:exported="false" />
        <activity
            android:name="com.example.comeback.Trofeos"
            android:exported="false" />
        <activity
            android:name="com.example.comeback.MainMenu"
            android:exported="false" />
        <activity android:name="com.example.comeback.MainActivity" />
        <activity android:name="com.example.comeback.RegistroActivity" />
        <activity android:name="com.example.comeback.RecoveryActivity" />
        <activity
            android:name="com.example.comeback.SplashScreen"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>