<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tripndream.comeback">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MangaReviews"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AvistamientosActivity"
            android:exported="false" />
        <activity
            android:name=".DetalleActivity"
            android:exported="false" />
        <activity
            android:name=".ReportesActivity"
            android:exported="false" />
        <activity
            android:name=".NuevoHogarActivity"
            android:exported="false" />
        <activity
            android:name=".EnSuHogarActivity"
            android:exported="false" />
        <activity
            android:name=".PerdidosActivity"
            android:exported="false"
            android:label="@string/title_activity_perdidos"
            android:theme="@style/Theme.MangaReviews.NoActionBar" />
        <activity
            android:name=".Formulario"
            android:exported="false" />
        <activity
            android:name=".Trofeos"
            android:exported="false" />
        <activity
            android:name=".MainMenu"
            android:exported="false" />
        <activity android:name=".MainActivity" />
        <activity android:name=".RegistroActivity" />
        <activity android:name=".RecoveryActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>