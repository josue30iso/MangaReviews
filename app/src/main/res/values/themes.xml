<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MangaReviews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/design_default_color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/design_default_color_on_secondary</item>
        <item name="colorOnPrimary">@color/AmarillitoBonito</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:listDivider">@color/white</item>
    </style>
    <style name="splashScreenTheme" parent="Theme.MangaReviews">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="Spinner" parent="Theme.MangaReviews">
        <item name="android:colorBackground">@color/Amarillo</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#CFFAE2</item>
    </style>

    <style name="TextAppearance44">
        <item name="android:textColor">#CFFAE2</item>
    </style>

    <style name="Theme.NavDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#1A3A68</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#1A3A68</item>
    </style>

    <style name="buttons" parent="Theme.MangaReviews">
        <item name="colorOnPrimary">#1A3A68</item>
    </style>
    <style name="Theme.MangaReviews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MangaReviews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MangaReviews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>